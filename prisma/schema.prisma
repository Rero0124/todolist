// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
 	provider = "prisma-client-js"
}

datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}

model user {
	id		String	@id
	pw		String
	salt 	String
	post	post[]
}

model post {
	postId		Int		@id @default(autoincrement())
	title 		String	
	content		String 	
	authorId	String
	author		user?	@relation(fields: [authorId], references: [id])
}